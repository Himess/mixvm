{
  "name": "mixvm-relayer",
  "version": "2.0.0",
  "description": "Multi-chain CCTP Relayer for MixVM Privacy Bridge",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.ts",
    "start:cctp": "ts-node src/cctp-server.ts",
    "start:listener": "ts-node src/start-listener.ts",
    "listener": "ts-node src/start-listener.ts",
    "dev": "ts-node-dev --respawn src/server.ts",
    "dev:listener": "ts-node-dev --respawn src/start-listener.ts",
    "relay": "node src/relay-message.js",
    "status": "node src/status.js",
    "test": "node src/test-connection.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
